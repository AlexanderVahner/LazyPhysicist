<Page x:Class="LazyOptimizer.UI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LazyOptimizer.UI.Views" xmlns:viewmodels="clr-namespace:LazyOptimizer.UI.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">
    <Page.DataContext>
        <viewmodels:SettingsVM/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Header="Plugin" Grid.Column="0" Padding="5">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selection Count Limit for Cached Plans:</TextBlock>
                    <TextBox Text="{Binding Settings.PlansSelectLimit}" Width="50" Margin="5 0 0 0"/>
                </StackPanel>
                <CheckBox IsChecked="{Binding Settings.PlanMergeEnabled}" Content="Enable Plan Merge Mode"  Margin="0 5 0 0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="PlansCache App" Grid.Column="1" Padding="5">
            <StackPanel>
                <TextBlock>PlansCache App Path</TextBlock>
                <DockPanel Margin="0 5 0 0">
                    <Button Content=" ... " DockPanel.Dock="Right" Click="Button_Click"/>
                    <TextBox x:Name="PlansCacheAppPathText" Text="{Binding Settings.PlansCacheAppPath}"/>
                </DockPanel>                
                <CheckBox IsChecked="{Binding Settings.PlansCacheVerboseMode}" Content="Verbose mode"  Margin="0 5 0 0"/>
                <CheckBox IsChecked="{Binding Settings.PlansCacheRecheckAllPatients}" Content="Recheck all patients next time"  Margin="0 5 0 0"/>
            </StackPanel>
        </GroupBox>
        <CheckBox IsChecked="{Binding Settings.DebugMode}" Content="Debug Mode" Grid.Row="1" Margin="10"/>    
            
    </Grid>
</Page>
